<!DOCTYPE html>
<html>
<head>
  <title>SuperheroesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class= "container">
<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-warning" %>
  <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-notice" %>
  <% end %>
<% end %>

<ul class="nav">
<li><%= link_to "See all Teams", root_path %></li>
<li><%= link_to "See all Superheroes", superheroes_path %></li>

<% if current_user %>
<li>Signed in as <%= current_user.username %></li>
<li> <%= link_to "Logout", logout_path(current_user) %></li>
<% else %>
 <li> <%= link_to 'Login', '/login' %> </li>
 <li><%= link_to 'Signup', signup_path %></li>
<% end %>

</ul>

<%= yield %>

</body>
</html>
